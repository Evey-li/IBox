<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/close_send_dialog"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_close_indigo_700_24dp"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="18sp"
        android:layout_margin="5dp"
        android:text="寄件方式"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/send_delivery_self"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="服务点自寄"
            android:gravity="center"
            android:textSize="16sp"
            app:qmui_radius="4dp"
            app:qmui_borderColor="@color/colorPrimary"
            app:qmui_borderWidth="1dp"
            android:layout_margin="6dp"/>
        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/courier_take_delivery"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="快递员上门取件"
            android:gravity="center"
            android:textSize="16sp"
            app:qmui_radius="4dp"
            app:qmui_borderColor="@color/colorPrimary"
            app:qmui_borderWidth="1dp"
            android:layout_margin="6dp"/>
    </LinearLayout>
</LinearLayout>